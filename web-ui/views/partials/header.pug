.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      span.navbar-brand(href='/')
        i.fas.fa-cube
        | Sound Server
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title === 'Home') ? 'active' : undefined)
          a(href='/') Home
        if user
          li(class=(title === 'Status') ? 'active' : undefined)
            a(href='/soundserver/status') Status
          li(class=(title === 'Settings') ? 'active' : undefined)
            a(href='/soundserver/settings') Settings
          li(class=(title === 'System') ? 'active' : undefined)
            a(href='/system') System
          li(class=(title === 'Contact') ? 'active' : undefined)
            a(href='/contact') Contact
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/login') Login
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
